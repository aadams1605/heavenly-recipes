<% if @category_data %>
  <p>Category: <%= @category_data[:category] %></p>
  <%= image_tag @category_data[:photo], alt: @category_data[:category], class: 'category-thumbnail' %>
<% elsif @search_recipe_data %>
  <% @search_recipe_data.each do |recipe| %>
    <p>Category: <%= recipe[:category] %></p>
    <%= image_tag recipe[:photo], alt: recipe[:name] %>
    <p>Name: <%= recipe[:name] %></p>
    <p>Instructions: <%= recipe[:instructions] %></p>
  <% end %>
<% end %>
