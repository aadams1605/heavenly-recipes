<h1>Search Results for "<%= @query %>"</h1>

<% if @meal_data.present? %>
  <% @meal_data.each do |meal| %>
  <%= link_to recipe_path(meal[:id]) do %>
    <%= image_tag meal[:photo], alt: meal[:name] %>
  <% end %>
    <h2><%= meal[:name] %></h2>
    <p><%= meal[:category] %></p>
  <% end %>
<% else %>
  <p>No results found.</p>
<% end %>
