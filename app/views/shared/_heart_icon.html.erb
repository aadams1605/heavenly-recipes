<% if current_user.favourites.exists?(recipe_id: recipe.id) %>
  <%= link_to favourites_create_path(recipe: recipe.id), data: {turbo_method: :post} do %>
    <i class="fas fa-heart clicked"></i>
  <% end %>
<% else %>
    <%= link_to favourites_create_path(recipe: recipe.id), data: {turbo_method: :post} do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% end %>
